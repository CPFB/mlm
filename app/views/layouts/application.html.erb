<!DOCTYPE html>
<html>
<head>
  <title><%= "Music Lesson Manager" + show_title(@title) %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="container" class="container_12">
		<div id="header">
		<div id="title" class="grid_8">
			<h1 class="title"><%= link_to "Music Lesson Manager", root_path %></h1>
		</div><!-- title div ends here -->
		<div id="nav_actions" class="grid_4">
			<% if current_user %>
				Signed in as <%= current_user.full_name %> | <%= link_to "Sign out", sign_out_path %>
			<% else %>
				<%= link_to "Sign in", sign_in_path %> | <%= link_to "Sign up", sign_up_path %>
			<% end %>
		</div><!-- nav_actions div ends here -->
		</div>

		<div class="notice grid_12"><%= notice %></div>
	  <div class="alert grid_12"><%= alert %></div>

		<div id="content" class="grid_12">
			<%= yield %>
		</div><!--content div ends here -->
	</div><!--container div ends here -->
</body>
</html>
